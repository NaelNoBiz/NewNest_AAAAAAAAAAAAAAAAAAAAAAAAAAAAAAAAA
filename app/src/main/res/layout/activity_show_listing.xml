<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background5"

    tools:context=".ShowListingActivity">



        <ImageView
            android:id="@+id/showListingPictureIV"
            android:layout_width="400dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/showListingAddressTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:textSize="24dp"
            android:text="TextView" />

        <TextView


            android:id="@+id/showListingCityTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"

            android:text="TextView" />
        <TextView
            android:layout_marginTop="10dp"

            android:id="@+id/showListingPriceTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:textSize="20dp"
            android:text="TextView" />


        <TextView
            android:layout_marginTop="15dp"
            android:textSize="16dp"
            android:id="@+id/showListingRoomNumberTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/showListingFloorNumberTV"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/showListingSizeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/showListingLotSizeTV"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/showListingOwnerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/call_icon" />

            <TextView
                android:id="@+id/showListingPhoneNumberTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14dp" />

        </LinearLayout>

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/deleteListingBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Listing"
            android:visibility="gone"
            android:clickable="false"/>

        <ImageButton
            android:id="@+id/saveListingBTN"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_baseline_bookmark_24"
            android:visibility="gone"
            android:clickable="false"/>


</LinearLayout>